<% content_for(:title, @episode.title.truncate(50)) %>

<div class="row">
  <%= render partial: "channels/item/episode_card", locals: { episode: @episode } %>
  <div class="col-xs-12 col-sm-7 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>
          <%= @episode.title %>
        </h3>
      </div>
      <div class="panel-body">
        <div class="feedcast-player" media-url="<%= @episode.audio.url %>"></div>
        <p><%= html_sanitize(@episode.summary) %></p>
      </div>
      <div class="panel-footer">
        <p class="fc-episode-extra-info">Publicado em <%= @episode.published_at %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= t(:comment, count: 2) %></h3>
      </div>
      <div class="panel-body">
        <%= render partial: "episodes/comments" %>
      </div>
    </div>
  </div>
</div>
