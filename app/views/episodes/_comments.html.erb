<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><i class="fa fa-comments"></i> <%= t(:comment, count: 2) %></h3>
      </div>
      <div class="panel-body">
        <div id="disqus_thread"></div>
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    var d = document, s = d.createElement("script");
    s.src = "https://feedcast.disqus.com/embed.js";
    s.setAttribute("data-timestamp", + new Date());
    (d.head || d.body).appendChild(s);
  })();
</script>
<script id="dsq-count-scr" src="https://feedcast.disqus.com/count.js" async></script>
