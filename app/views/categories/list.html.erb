<% content_for(:title, t(:category, count: 2)) %>

<div class="col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3><i class="fa fa-th-large"></i> <%= t(:category, count: 2) %></h3>
    </div>
    <div class="panel-body">
      <% @categories.each do |category| %>
        <div class="col-sm-4 col-md-3">
          <a class="category-link" href="<%= category_path(category) %>">
            <div class="category">
              <h3> <%= category.icon_html %> <%= category.title %> </h3>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
