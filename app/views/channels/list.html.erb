<div class="col-xs-12 panel panel-default">
  <div class="panel-body">
    <h4 class="title-gallery">Canais recomendados</h4>
    <div class="row">
      <% @channels.each do |channel| %>
        <div class="channel col-xs-6 col-sm-3 col-md-2">
          <a href="<%= channel_path(channel) %>">
            <div class="channel-img" 
              style="background-image: url(<%= channel.image_url || "http://placehold.it/350x150?text=#{channel.title}" %>)"></div>
            <h3><%= channel.title %></h3>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
